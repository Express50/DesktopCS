<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:DesktopCS.Controls">
    <Style x:Key="UserlistExpander" TargetType="{x:Type Expander}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Expander}">
                    <Grid Margin="2">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Name="ContentRow" Height="0"/>
                        </Grid.RowDefinitions>
                        <ToggleButton 
                            Grid.Row="0"
                            Style="{StaticResource TextToggleButtonStyle}"
                            IsChecked="{Binding Path=IsExpanded, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                            OverridesDefaultStyle="True"
                            Cursor="Hand">

                            <ContentPresenter
                                ContentSource="Header"
                                RecognizesAccessKey="True" />
                        </ToggleButton>

                        <ContentPresenter 
                            Margin="25,0,0,0" 
                            Grid.Row="1"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsExpanded" Value="True">
                            <Setter TargetName="ContentRow" Property="Height" Value="{Binding ElementName=Content, Path=DesiredHeight}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type controls:UserlistItem}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:UserlistItem}">
                    <Expander Style="{StaticResource UserlistExpander}" Foreground="{TemplateBinding Foreground}">
                        <Expander.Header>
                            <StackPanel Orientation="Horizontal">
                                <ContentPresenter ContentSource="Flag" Margin="0,0,5,0" />
                                <ContentPresenter/>
                            </StackPanel>
                        </Expander.Header>

                        <StackPanel>
                            <Button Foreground="{StaticResource ChatBrush}" Style="{StaticResource TextButtonStyle}">QUERY</Button>
                            <Button Foreground="{StaticResource ChatBrush}" Style="{StaticResource TextButtonStyle}">KICK</Button>
                            <Button Foreground="{StaticResource ChatBrush}" Style="{StaticResource TextButtonStyle}">BAN</Button>
                        </StackPanel>
                    </Expander>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>